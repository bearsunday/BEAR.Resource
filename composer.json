{
    "name": "bear/resource",
    "description": "Hypermedia framework for object as a service",
    "keywords": [
        "Hypermedia",
        "REST",
        "HATEOAS",
        "Object as a service",
        "Protocol"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Akihito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "ray/di": "^2.5",
        "nocarrier/hal":"^0.9.12",
        "doctrine/cache":"^1.6",
        "rize/uri-template": "^0.3",
        "phpdocumentor/reflection-docblock": "^3.1",
        "koriym/http-constants": "^1.0",
        "ray/web-param-module": "2.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7 < 6.0",
        "squizlabs/php_codesniffer": "^2.8",
        "phpmd/phpmd": "^2.6"
    },
    "suggest": {
        "ext-uri_template": "ext/uri_template for URI Template(RFC6570) specification."
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Resource\\": ["src/", "src-deprecated"]
        },
        "files": [
            "src-files/uri_template.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Resource\\": [
                "tests/",
                "tests/Fake/"
            ],
            "FakeVendor\\Sandbox\\": "tests/Fake/FakeVendor/Sandbox/",
            "FakeVendor\\Blog\\": "tests/Fake/FakeVendor/Blog/src"
        }
    },
    "scripts" :{
        "test": ["@cs", "phpunit"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"]
    }
}
